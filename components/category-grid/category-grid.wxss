/* components/category-grid/category-grid.wxss */
.container{
    height:320rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    /*六宫格背景色默认是透明的，更改了页面的背景色之后，这里需要设置背景色白色*/
    background-color: #ffffff;
}

.inner-container{
    width:730rpx;
    height: 300rpx;
    border: 1px dashed #DCEBE6;
}

.grid-item {
    width: 200rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.img{
    width:60rpx;
    height:60rpx;
}

.text{
    margin-top: 6rpx;
    font-size: 24rpx;
    color: #333333;
}
